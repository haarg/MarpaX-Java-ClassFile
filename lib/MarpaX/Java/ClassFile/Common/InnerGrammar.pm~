use strict;
use warnings FATAL => 'all';

package MarpaX::Java::ClassFile::Common::InnerGrammar;

# ABSTRACT: Parsing engine role for .class file parsing - inner grammar

# VERSION

# AUTHORITY

use Moo::Role;

with 'MarpaX::Java::ClassFile::Common';

# ------------------
# Role modifications
# ------------------
around whoami => sub {
  my ($orig, $self, @args) = @_;
  #
  # Append the array indice
  #
  join('', $self->$orig(@args), '[', $self->_nbDone < $self->size ? ($self->_nbDone + 1) : $self->size, '/', $self->size, ']')
};

1;
